						<td>自己紹介</td>
						<td><%= current_member.introduction %></td>
					</tr>
					<tr>
						<td>生年月日</td>
						<td><%= current_member.birthday %></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= current_member.email %></td>
					</tr>
				</table>
			</div><br><br>
		</div>
