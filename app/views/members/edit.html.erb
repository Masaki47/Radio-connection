<h1>Members#edit</h1>
<div class="container">
</br>
  <h2><i class="fas fa-user-edit"></i>会員情報編集</h2><br>

    <%= form_for (@member), url:member_path do |f| %>
    <div class="row user_edit">

      <div class="col-xs-2">
        <%= f.label :"氏名" %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :name %>
      </div>

    </div>

    <div class="row user_edit">

      <div class="col-xs-2">
        <%= f.label :"ユーザー名" %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :username %>
      </div>

    </div>

    <div class="row user_edit">

      <div class="col-xs-2">
        <%= f.label :"自己紹介" %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :introduction %>
      </div>

    </div>

    <div class="row user_edit">

      <div class="col-xs-2">
        <%= f.label :"生年月日" %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :birthday %>
      </div>

    </div>

    <div class="row user_edit">

        <div class="col-xs-3">
            <%= f.label :"メールアドレス" %>
        </div>
        <div class="col-xs-3">
            <%= f.email_field :email %>
        </div>

    </div>
    <div class="row user_edit">

      <div class="col-xs-3">
        </br>
        <%= f.submit "編集内容を保存" ,class:"btn btn-primary" %>
        <% end %>
      </div>

    </div>

</div>