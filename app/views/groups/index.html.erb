<div class="container">
<h2>検索</h2>
<%= form_tag(root_path, method: :get) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<h1>グループ一覧</h1>
<div class="group_list">
  <% @groups.each do |group| %>
    <div class="group_index">
      <% unless GroupMember.exists?(group_id: group.id, user_id: current_member.id) %>
        <div class="participation">
          <a href="#">参　加</a> ###このボタンをクリックすることで参加できるように実装したい
        </div>
      <% else %>
        <div class="participation">
          <a href="#">参加中</a>
        </div>
      <% end %>
      <div class="group__name" >
        <%= group.name %>
      </div>
      <div class="group_content">
        <%= group.content %>
      </div>
    </div>
  <% end %>
</div>
</div>